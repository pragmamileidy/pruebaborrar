<%= simple_form_for(@payment) do |f| %>
<div class="form-center">
  <div class="row-fluid">
    <div class="span2">
    </div>
    <div class="span8">
      <div id="MyWizard" class="wizard">
        <ul class="steps">
          <li data-target="#step1" class="active"><span class="badge badge-info">1</span>Step 1<span class="chevron"></span></li>
          <li data-target="#step2"><span class="badge">2</span>Step 2<span class="chevron"></span></li>
        </ul>
      </div><br>
      <div class="step-content" id="rootwizard">
        <div class="step-pane active" id="step1">
          <div class="input-large">
            <%= render 'merchant', :f => f %>
             <div id="tarjeta_invalida"></div>
             <%= f.input :amount, label: 'Cantidad a Pagar'%>
             <%= f.hidden_field :customer_id, label: 'CLiente'%>
             <%= render 'customer', :f => f %></div>
          <div class="form-actions">
            <input type="button" class="btn btn" id="btnWizardNext" value="next">
          </div>
        </div>  
        <div class="step-pane" id="step2">
          <div class="input-large"> 
            <table class="table table-striped">
              <thead>
                <tr>
                  <th>Datos de Tarjeta</th>
                </tr>
              </thead>
              <tbody>
                <tr>
                  <td>Monto a Cancelar</td>
                  <td id="monto_final"></td>
                </tr>
                <tr>
                  <td>Tipo de Tarjeta</td>
                  <td id="tipo_tarjeta"></td>
                </tr>
                <tr>
                  <td>NÃºmero de Tarjeta</td>
                  <td id="numero_tarjeta"></td>
                </tr>
                <tr>
                  <td>Nombre del TarjetaHabiente</td>
                  <td id="nombre_tarjetahabiente"></td>
                </tr>
              </tbody>
            </table>
          </div>
          <div class="form-actions">
            <input type="button" class="btn btn" id="btnWizardPrev" value="prev">
            <%= f.submit :class => 'btn btn-primary', :id => 'wizard-fin' %>
          </div>
        </div>
        <div class="form-actions">
          <div class="pull-right">
            <%= link_to 'Cancel', payments_path, :class => 'btn btn-danger' %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<% end %>